<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BackgroundColor">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="BaseMarginStyle">
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="TextViewStyle" parent="BaseMarginStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/cardview_light_background</item>
    </style>

    <style name="ImageIconStyle" parent="BaseMarginStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">75dp</item>
    </style>

    <style name="LinearLayoutCard">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">20dp</item>

        <item name="android:orientation">vertical</item>

    </style>
</resources>